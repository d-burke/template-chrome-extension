*Description: 
*Google Chrome Extension template for injecting JavaScript 
*****************************************************/


{
   "manifest_version": 2,

   "name": "Template ",
   "description": "Template for injecting JavaScript into a page",
   "version": "1.0",

   "browser_action": 
   {
      "default_title": "template",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
   },

   "content_scripts": 
   [
      {
         "matches": ["http://*/*", "https://*/*"],
         "js": ["javascriptCode.js"]
      }
   ],

   "permissions": 
   [
      "tabs", "http://*/*", "https://*/*"
   ]
}
